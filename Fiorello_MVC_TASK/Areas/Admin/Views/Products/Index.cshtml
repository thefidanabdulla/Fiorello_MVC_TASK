@using Fiorello_MVC_TASK.Models;
@model List<Product>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <a asp-action="create" asp-controller="products" asp-area="admin" class="btn btn-primary col-2">Create</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Price</td>
                            <td>@item.Description</td>
                            <td>
                                <img src="~/assets/img/@item.PhotoName" />
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="update" asp-controller="recentwork" asp-area="admin" asp-route-id="item.Id">Update</a>
                                <a class="btn btn-danger" asp-action="delete" asp-controller="recentwork" asp-area="admin" asp-route-id="item.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
