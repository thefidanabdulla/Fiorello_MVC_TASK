@using Fiorello_MVC_TASK.Areas.Admin.ViewModel
@model ProductUpdateViewModel;
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Update Team Member
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="products" asp-area="admin" class="forms-sample">
                            <input type="hidden" asp-for="PhotoName" />
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input class="form-control" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input class="form-control" asp-for="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <br />
                                <img style="width: 100px; height: 100px; border-radius: 50%;" src="~/assets/img/@Model.PhotoName" />
                                <br />
                                <br />
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
